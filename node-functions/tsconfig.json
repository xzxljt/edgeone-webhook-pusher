{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../.edgeone/node-functions",
    "rootDir": ".",
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
