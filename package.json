{
  "name": "edgeone-webhook-pusher",
  "version": "1.0.0",
  "description": "Serverless webhook push service built on Tencent EdgeOne Edge Functions",
  "author": {
    "name": "colin@ixNieStudio",
    "email": "colin@ixnie.cn"
  },
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ixNieStudio/edgeone-webhook-pusher.git"
  },
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "edgeone pages dev",
    "dev:console": "turbo dev --filter=console",
    "build": "turbo build && turbo build:functions",
    "build:functions": "turbo build:functions",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rimraf dist .output .turbo",
    "deploy": "edgeone pages deploy dist"
  },
  "devDependencies": {
    "edgeone": "^1.2.19",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  }
}
